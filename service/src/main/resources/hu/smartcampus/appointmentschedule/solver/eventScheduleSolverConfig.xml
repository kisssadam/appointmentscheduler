<?xml version="1.0" encoding="UTF-8"?>
<solver>
	<!--<environmentMode>FAST_ASSERT</environmentMode> -->
	<solutionClass>hu.smartcampus.appointmentschedule.domain.EventSchedule</solutionClass>
	<entityClass>hu.smartcampus.appointmentschedule.domain.Event</entityClass>
	
	<scoreDirectorFactory>
		<scoreDefinitionType>HARD_SOFT</scoreDefinitionType>
		<easyScoreCalculatorClass>hu.smartcampus.appointmentschedule.domain.solver.EventScheduleSimpleScoreCalculator</easyScoreCalculatorClass>
		<!-- <scoreDrl>hu.smartcampus.appointmentschedule.service/eventScoreRules.drl</scoreDrl> -->
	</scoreDirectorFactory>

	<termination>
		<terminationCompositionStyle>OR</terminationCompositionStyle>
		<bestScoreLimit>0hard/0soft</bestScoreLimit>
		<secondsSpentLimit>10</secondsSpentLimit>
	</termination>
	<constructionHeuristic>
		<constructionHeuristicType>FIRST_FIT_DECREASING</constructionHeuristicType>
	</constructionHeuristic>
	<localSearch>
		<acceptor>
			<!-- Az entityTabuSize-os vackok hashCode-ot hasznalnak, de valami hashcode 
				violation miatt elszall az egesz program. -->
			<!-- <entityTabuSize>7</entityTabuSize> -->
			<lateAcceptanceSize>500</lateAcceptanceSize>
		</acceptor>
		<forager>
			<acceptedCountLimit>1000</acceptedCountLimit>
		</forager>
	</localSearch>
</solver>
